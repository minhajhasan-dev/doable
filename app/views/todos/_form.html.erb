<%= form_with(model: todo, class: "space-y-5") do |form| %>
  <% if todo.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-xl p-4">
      <div class="flex items-center space-x-2 mb-2">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-red-500">
          <path fill-rule="evenodd" d="M9.401 3.003c1.155-2 4.043-2 5.197 0l7.355 12.748c1.154 2-.29 4.5-2.599 4.5H4.645c-2.309 0-3.752-2.5-2.598-4.5L9.4 3.003ZM12 8.25a.75.75 0 0 1 .75.75v3.75a.75.75 0 0 1-1.5 0V9a.75.75 0 0 1 .75-.75Zm0 8.25a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5Z" clip-rule="evenodd" />
        </svg>
        <h2 class="text-sm font-semibold text-red-800"><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h2>
      </div>
      <ul class="list-disc list-inside text-sm text-red-700 space-y-1 ml-6">
        <% todo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :name,
      class: "w-full px-4 py-2.5 border border-gray-300 rounded-xl shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors duration-200 text-gray-900 placeholder-gray-400",
      placeholder: "What needs to be done?" %>
  </div>

  <div>
    <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.textarea :description,
      class: "w-full px-4 py-2.5 border border-gray-300 rounded-xl shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors duration-200 text-gray-900 placeholder-gray-400 resize-y min-h-[100px]",
      placeholder: "Add a description (optional)..." %>
  </div>

  <div class="flex items-center space-x-3">
    <%= form.check_box :completed,
      class: "w-4 h-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500 cursor-pointer" %>
    <%= form.label :completed, class: "text-sm font-medium text-gray-700 cursor-pointer" %>
  </div>

  <div>
    <%= form.label :priority, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.number_field :priority,
      class: "w-full px-4 py-2.5 border border-gray-300 rounded-xl shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors duration-200 text-gray-900",
      placeholder: "1 = High, 2 = Medium, 3 = Low",
      min: 1, max: 5 %>
  </div>

  <div>
    <%= form.label :project_id, "Project", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.collection_select :project_id, Project.all, :id, :name, { prompt: "Select a project" },
      class: "w-full px-4 py-2.5 border border-gray-300 rounded-xl shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors duration-200 text-gray-900 bg-white" %>
  </div>

  <div>
    <%= form.submit class: "inline-flex items-center bg-indigo-600 hover:bg-indigo-700 text-white font-semibold px-6 py-2.5 rounded-xl shadow-md hover:shadow-lg transition-all duration-200 cursor-pointer" %>
  </div>
<% end %>
